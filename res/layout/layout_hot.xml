<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="2dp"
        >
        <ImageView 
            android:layout_width="20dp"
	    	android:layout_height="20dp"
	    	android:background="@drawable/icon_play"
            />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="熱門 MV" 
	        android:gravity="center"
	        android:textColor="#B30000"	        
	        android:textSize="18dp"
	        android:layout_marginLeft="5dp"
	        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#D60D0D"
        android:layout_marginTop="5dp"
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@drawable/gallery_selector"   
        >
        <LinearLayout android:id="@+id/linear_network"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:gravity="center"
        	android:orientation="horizontal"
        	android:visibility="gone"       	
            >
            <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="無網路連線 "
	            android:textColor="#383938"
                />
            <Button android:id="@+id/btn_promotion_reload"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="重試"
                />           
        </LinearLayout>
        <LinearLayout android:id="@+id/linear_downloading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
	        <ProgressBar 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" 下載中, 請稍候.."
	            android:textColor="#B0B0B0"
	             />
        </LinearLayout>
	    <Gallery
	        android:id="@+id/gallery" 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:spacing="15dp"
		    android:fadingEdge="none"
		    android:paddingTop="10dp"
		    android:paddingBottom="10dp"
	        />
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#D60D0D"
        ></LinearLayout>
    
    <ListView android:id="@+id/list_tab_hot"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        ></ListView>

</LinearLayout>